{
  "compilerOptions": {
    "target": "es5",            // The JavaScript version you want to target
    "module": "esnext",         // Specify the module code generation
    "baseUrl": "./",            // Base directory for module resolution
    "moduleResolution": "node", // Use Node.js-style module resolution
    "paths": {
      "@/*": ["src/*"]          // Path aliases for easier imports
    },
    "lib": [
      "esnext",                 // Include ESNext features
      "dom",                    // Include DOM types
      "dom.iterable",
      "scripthost"              // Include types for script host environments
    ]
  }
}
